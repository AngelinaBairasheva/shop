<div id="btn-to-top"><i class="fa fa-chevron-up"></i></div>
<script type="text/javascript">
    $(document).ready(function(){
        $(window).scroll(function () {
            if ($(this).scrollTop() > 65) {
                $('#btn-to-top').fadeIn();
            } else {
                $('#btn-to-top').fadeOut();
            }
        });
